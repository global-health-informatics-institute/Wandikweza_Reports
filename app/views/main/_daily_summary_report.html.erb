<div style="height: 87vh; width: 100vw;overflow: auto;">
  <div style="text-align:center; line-height: 2em;font-size: 1.5em;">
    <b><%= facility_name.titleize %></b><br/>
    Daily Cash Summary
  </div>

  <div style="font-size: 1.3em;margin-right: auto;margin-left: auto;width:98%">
    <table border='1' width=100% style="text-align: center;border-collapse: collapse; line-height: 2em;">
      <tr>
        <td colspan='5' style="font-weight: bold; text-align: left;padding-left: 5px;"> Date: <%= params[:start_date].to_date.strftime('%d %b, %Y')%></td>
      </tr>
      <tr>
        <td colspan='5' style="font-weight: bold; text-align: left;padding-left: 5px;"> Working Hour: <%= @shift%></td>
      </tr>
      <tr>
        <td colspan='5' style="font-weight: bold; text-align: left;padding-left: 5px;"> Total:  <%#= local_currency(@totals[:general] + @totals[:private]) %></td>
      </tr>
      <tr>
        <td style="font-weight: bold;">Reception</td>
        <td colspan='4' style="font-weight: bold;">Accounts</td>
      </tr>
      <tr>
        <td>Cashier</td>
        <td>Checked By</td>
        <td>Banked By</td>
        <td>Dept. Head</td>
        <td>Account General Manager</td>
      </tr>
      <tr>
        <td style="text-align: left;padding-left: 5px;">Name: <%#= current_user.name%></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td style="text-align: left;padding-left: 5px;">Sign: </td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td rowspan='2' style="font-weight: bold;">ACC NAME</td>
    <!--    <td colspan='2'>GENERAL</td> 
        <td colspan='2'>PRIVATE</td> -->
      </tr>
      <tr>
        <td colspan="4" style="font-weight: bold;">AMOUNT</td>
       
      </tr>
      <td colspan='2' style="text-align: right;padding-right: 5px;"><%= local_currency(@collected) %></td>
      <% (@records || []).each do |id,record| %>
          <tr>
            <td style="font-weight: bold; text-align: left;padding-left: 5px;"><%= record[:name].upcase %></td>
            
            <td colspan='2' style="text-align: right;padding-right: 5px;"><%#= local_currency(record[:private]) %></td>
          </tr>
      <% end %>
      <tr>
        <td style="font-weight: bold;">TOTAL</td>
        <td colspan='2' style="text-align: right;padding-right: 5px;"><%#= local_currency(@totals[:general]) %></td>
        <td colspan='2' style="text-align: right;padding-right: 5px;"><%#= local_currency(@totals[:private]) %></td>
      </tr>
    </table>
  </div>
</div>

<div class="footer">
  <button class="green" style="float: right;" onmousedown="window.location='/'">Finish</button>
  <button style="float: right;" onmousedown="window.location='/main/print_daily_cash_summary?start_date=<%= @start_date %>&end_date=<%= @end_date %>&shift=<%= @shift%>'">Print</button>

</div>